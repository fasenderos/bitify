{
  "name": "bitify-root",
  "version": "0.0.0",
  "private": true,
  "description": "Ultra-fast Open Source Trading Platform for NodeJS",
  "license": "Apache-2.0",
  "scripts": {
    "ci:publish": "pnpm publish -r",
    "cleanall": "rm -rf pnpm-lock.yaml node_modules */**/node_modules && pnpm workspace -- clean",
    "clean": "pnpm workspace -- clean",
    "format": "pnpm clean && turbo --concurrency=1 format",
    "format:fix": "pnpm clean && turbo --concurrency=1 format:fix",
    "lint": "pnpm clean && turbo --concurrency=1 lint",
    "lint:fix": "pnpm clean && turbo --concurrency=1 lint:fix",
    "prepare": "husky install",
    "release": "turbo release --concurrency=1",
    "test": "pnpm workspace -- test",
    "test:dev": "pnpm workspace -- test:dev",
    "test:ci": "pnpm workspace -- test:ci",
    "test:cov": "pnpm workspace -- test:cov",
    "start": "pnpm workspace -- start",
    "start:dev": "pnpm workspace -- start:dev",
    "workspace": "pnpm -r --workspace-concurrency=1"
  },
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.3",
    "@tsconfig/strictest": "^2.0.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "turbo": "^1.10.14"
  },
  "keywords": [
    "trading",
    "cryptocurrency",
    "exchange",
    "trading-platform",
    "matching-engine",
    "bitify",
    "blockchain",
    "crypto-exchange-software",
    "cryptocurrency-exchange-software"
  ]
}
